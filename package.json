{
	"name": "videospeedup.com",
	"version": "0.0.0-dev",
	"private": true,
	"type": "module",
	"license": "AGPL-3.0-or-later",
	"description": "A web app to create bookmarklets to speed up videos",
	"author": {
		"name": "Edoardo Scibona",
		"url": "https://github.com/velut"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/velut/videospeedup.com.git"
	},
	"scripts": {
		"prepare": "svelte-kit sync || echo ''",
		"dev": "vite dev",
		"build": "vite build && bun run scripts/third-party-licenses.ts",
		"start": "vite build && vite preview",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"bunny:deploy": "bun run scripts/deploy-on-bunny.ts",
		"pre-push": "bun i && bun run lint && bun run check && bun run build"
	},
	"devDependencies": {
		"@iconify-json/noto": "^1.2.7",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.37.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@types/bun": "^1.2.21",
		"@types/node": "^24.6.1",
		"daisyui": "^5.1.8",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"rollup-plugin-license": "^3.6.0",
		"svelte": "^5.38.7",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"unplugin-icons": "^22.4.1",
		"vite": "^7.1.7"
	}
}
